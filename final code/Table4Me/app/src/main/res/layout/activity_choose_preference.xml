<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.table4me.mohitgautam.ChoosePreferenceActivity">

    <TextView
        android:id="@+id/HowtoText"
        android:textSize="19dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="How Do You Want To Find Restaurants ?"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/LocationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HowtoText"
        android:layout_marginTop="80dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Choose   By   Location"
        android:textColor="@color/colorOffWhite"
        android:textSize="16dp" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LocationBtn"
        android:layout_marginTop="30dp"
        android:text="OR"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:id="@+id/CusineBtn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Choose  By  Cuisine  Type"
        android:textColor="@color/colorOffWhite"
        android:textSize="16dp" />


</RelativeLayout>
