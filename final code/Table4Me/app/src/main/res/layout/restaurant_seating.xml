<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RESTURANTCONTAINER"
            android:background="@drawable/coffee_planet_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="1,1,indoor"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="21dp"
                />

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="2,2,indoor"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button2"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                />

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="3,2,indoor"
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/button3"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/button3"
                android:layout_toRightOf="@+id/button3"
                />

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="4,1,indoor"
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/button2"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/button4"
                android:layout_toRightOf="@+id/button4"
                />

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="5,3,indoor"
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button3"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="61dp"
                />

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="6,6,indoor"
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button6"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="7,3,indoor"
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/button7"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button6"
                android:layout_alignStart="@+id/button6"
                android:layout_below="@+id/button6"
                android:layout_marginTop="88dp"
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="8,4,indoor" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/button9"
                android:layout_alignLeft="@+id/button7"
                android:layout_alignStart="@+id/button7"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="9,3,indoor"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button8"
                android:layout_alignStart="@+id/button8"
                android:layout_alignTop="@+id/button9"
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="10,4,indoor" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button9"
                android:layout_alignStart="@+id/button9"
                android:layout_below="@+id/button9"
                android:layout_marginTop="105dp"
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="11,2,outside" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button11"
                android:layout_alignStart="@+id/button11"
                android:layout_alignTop="@+id/button12"
                android:background="@null"
                android:onClick="setReservationTable"
                android:tag="12,2,outside"/>


            <Button
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/DoneBtn"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Done"
                android:background="@color/colorAccent"
                android:layout_width="140dp"
                android:layout_height="60dp" />


            <Button
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/DeselectBtn"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Un-Check Table"
                android:background="@color/colorAccent"
                android:layout_width="140dp"
                android:layout_height="60dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
