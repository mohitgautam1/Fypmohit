<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOffWhite"
    tools:context="com.table4me.mohitgautam.ChooseCuisineActivity">

    <RelativeLayout
        android:id="@+id/CuisineHeader"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/BackChooseCuisine"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:text="Choose Cuisine Type"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/BackChooseCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/CuisineHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/Card1"
                    android:tag="Indian"
                    android:onClick="CardClickListner"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.CardView
                            android:id="@+id/Num1"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_width="60dp"
                            android:layout_height="80dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textSize="40dp"
                                    android:text="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_toRightOf="@+id/Num1"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="Indian"
                            android:textColor="@color/colorAccent"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/Card2"
                    android:tag="English"
                    android:onClick="CardClickListner"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.CardView
                            android:id="@+id/Num2"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_width="60dp"
                            android:layout_height="80dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textSize="40dp"
                                    android:text="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_toRightOf="@+id/Num2"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="English"
                            android:textColor="@color/colorAccent"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/Card3"
                    android:onClick="CardClickListner"
                    android:tag="Italian"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.CardView
                            android:id="@+id/Num3"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_width="60dp"
                            android:layout_height="80dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textSize="40dp"
                                    android:text="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_toRightOf="@+id/Num3"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="Italian"
                            android:textColor="@color/colorAccent"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card4"
                    android:onClick="CardClickListner"
                    android:tag="Fast Food"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.CardView
                            android:id="@+id/Num4"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_width="60dp"
                            android:layout_height="80dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textSize="40dp"
                                    android:text="4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_toRightOf="@+id/Num4"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="Fast Food"
                            android:textColor="@color/colorAccent"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card5"
                    android:onClick="CardClickListner"
                    android:tag="Coffee"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.CardView
                            android:id="@+id/Num5"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_width="60dp"
                            android:layout_height="80dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textSize="40dp"
                                    android:text="5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_toRightOf="@+id/Num5"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="Coffee"
                            android:textColor="@color/colorAccent"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
